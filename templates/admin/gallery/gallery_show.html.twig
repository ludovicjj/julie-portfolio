{% extends 'admin/base_admin.html.twig' %}

{% block title %}
    {{ gallery.title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("css/gallery/gallery_show.css") }}">
    <link rel="stylesheet" href="{{ asset("css/component/lightbox/lightbox.css") }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/component/lightbox.js') }}" type="module" defer></script>
{% endblock %}

{% block body %}
    {{ parent() }}
    <main class="container">
        <header class="gallery-title">
            <h1>{{ gallery.title }}</h1>
            <div>
                <a href="{{ path('app_gallery') }}" class="btn btn-primary btn-sm">Retour Ã  mes Galleries</a>
                <a href="{{ path('app_gallery_update', {id: gallery.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
            </div>
        </header>
        <section class="gallery-description">
            <h3>Description</h3>
            <p>{{ gallery.description }}</p>
            <span>Il y a 5 jours</span>
        </section>
        <div id="wrapper_gallery_grid">
            {% for picture in gallery.pictures %}
                <div class="picture_item">
                    <a href="{{ asset('uploads/pictures/' ~ picture.pictureFileName) }}">
                        <img src="{{ asset('uploads/pictures/' ~ picture.pictureFileName) }}" alt="{{ picture.name }}" class="picture_img">
                    </a>
                </div>
            {% endfor %}
        </div>
    </main>
{% endblock %}